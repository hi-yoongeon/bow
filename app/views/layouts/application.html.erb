<!DOCTYPE html>
<html>
<head>
  <title>Bow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta charset="utf-8" />
	<% if @viewport %>
	<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />
	<% else %>
	<meta name="viewport" content="user-scalable=no, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5, width=device-width" />
	<% end %>


	<% unless @viewport %>
	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
	<script src="/javascripts/bootstrap.min.js"></script>	
	<style type="text/css">
	/*공통*/
	@import url(http://fonts.googleapis.com/earlyaccess/nanumgothic.css);
	body {font-family: 'Nanum Gothic', sans-serif;font-weight:bold;}
	body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,textarea,p,blockquote,th,td,input,select,textarea,button{margin:0;padding:0}
	dl,ul,ol,menu,li{list-style:none}

	.screen_out {display:block;overflow:hidden;position:absolute;left:-9999px;width:1px;height:1px;font-size:0;line-height:0;text-indent:-9999px}
	.circle {border-radius:100px;}
	.of_h {overflow:hidden;}
	.clr {clear:both;}
	.hide {display:none;}

	/*메인 페이지*/
	.main_top {width:100%;height:72px;background-color:#222126;}
	.main_top .top_logo {float:left;margin:20px 0 0 15px;}
	.main_top .btn_login {float:right;margin:14px 11px 0 0;}
	.main_top .btn_logout {float:right;margin:14px 11px 0 0;}

	.main_display {float:left;width:100%;height:470px;background:url('../images/top_bg.png');}
	.main_display .main_profile_photo_frame {margin:26px auto 0;width:176px;height:176px;background-color:#FFF}
	.main_display .main_profile_photo_frame .main_profile_photo {margin:8px 0 0 8px;}
	.main_display .main_welcome_text {margin-top:17px;text-align:center;font-size:26px;color:#FFF;line-height:34px;}
	.main_display .main_btn_start {display:block;margin:22px auto 0;width:293px;height:70px;
	background-color:#A8D515;font-size:34px;color:#FFF;line-height:66px;text-align:center;text-decoration:none;box-shadow:2px 2px 2px #777;
	background-image: linear-gradient(bottom, #8ED100 23%, #9EEB00 66%);
	background-image: -webkit-gradient(
		linear,
		left bottom,
		left top,
		color-stop(0.33, #8ED100),
		color-stop(0.86, #9EEB00 )
	);}

	.main_content {float:left;margin:19px auto 0;width:100%;}
	.main_content .cont_btn_wrap {margin:0 auto;width:579px;}
	.main_content .cont_btn_wrap .cont_btn.lst {margin-left:15px;}
	.main_content .cont_list {width:600px;margin:0 auto;}
	.main_content .cont_list .cont_title {margin:5px;font-size:26px;color:#353539;line-height:32px;}
	.main_content .cont_list .cont_info_wrap {overflow:hidden;margin-top:10px;}
	.main_content .cont_list .cont_info_wrap .cont_photo {float:left; margin:5px;}
	.main_content .cont_list .cont_info_wrap .cont_member {float:left;margin:15px 0 0 5px;font-size:22px;}
	.main_content .cont_list .cont_info_wrap .cont_member_number {color:#15AEFF;}
	.main_content .cont_list .cont_info_wrap .cont_time {float:right;margin-top:15px;font-size:22px;color:#90909A;}
	.main_content .cont_list .cont_stick_wrap {position:relative;height:40px;border-bottom:1px solid #E1E1E4;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_common {float:left;height:20px;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_left {border-top-left-radius:10px;border-bottom-left-radius:10px;background:url("../images/bar_ok.png") 3px no-repeat;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_right {text-align:right;border-top-right-radius:10px;border-bottom-right-radius:10px;background:url("../images/bar_no.png") 98% 3px no-repeat;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_gray {background-color:#5A5A65;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_yellow {background-color:#FFCA00;}
	.main_content .cont_list .cont_stick_wrap .cont_stick_red {background-color:#E81400;}
	.main_content .cont_list .cont_stick_wrap .cont_ico_dog {position:absolute;top:-12px;left:342px;}


	/*login*/
	.login_top {width:100%;height:128px;background:url("/images/2_top_bg.png");}
	.login_top .login_header {float:left;margin:20px 0 0 15px;}
	.login_top .login_header .login_logo {float:left;}
	.login_top .login_header .login_title {float:left;margin:3px 0 0 7px;font-size:22px;color:#FFF;}

	.login_body {overflow:hidden;
		background-image: linear-gradient(bottom, #F9F9F9 23%, #FFF 66%);
		background-image: -webkit-gradient(
		linear,
		left bottom,
		left top,
		color-stop(0.33, #F9F9F9),
		color-stop(0.86, #FFF )
	);}

	.login_body .login_welcome_text {margin-top:104px;text-align:center;font-size:26px;line-height:34px;}

	.login_body .login_btn_wrap {margin:44px auto 0;width:444px}

	.login_body .login_footer {margin:244px auto 32px;width:277px;}

	/*join*/
	.join_top {width:100%;height:128px;background:url("/images/2_top_bg.png");}
	.join_top .join_header {float:left;margin:20px 0 0 15px;}
	.join_top .join_header .join_logo {float:left;}
	.join_top .join_header .join_title {float:left;margin:3px 0 0 7px;font-size:22px;color:#FFF;}
	.join_body {overflow:hidden;
	background-image: linear-gradient(bottom, #F9F9F9 23%, #FFF 66%);
	background-image: -webkit-gradient(
	     linear,
	     left bottom,
	     left top,
	     color-stop(0.33, #F9F9F9),
	     color-stop(0.86, #FFF )
	);}
	.join_body .join_welcome_text {margin-top:104px;text-align:center;font-size:28px;}
	.join_body .join_welcome_text .join_id {color:#15AEFF;}
	.join_body .join_profile_photo_frame {margin:26px auto 0;width:176px;height:176px;background-color:#FFF;box-shadow:2px 2px 2px #777;}
	.join_body .join_profile_photo_frame .join_profile_photo {margin:8px 0 0 8px;}
	.join_body .join_form {width:590px;margin:40px auto 0;}
	.join_body .join_form .join_lb {margin-bottom:15px;font-size:32px;font-weight:bold;}
	.join_body .join_form .join_lb.lst {margin-top:30px;}
	.join_body .join_form .join_text_input {padding: 0px 15px;width:558px;height:70px;font-size:28px;color:#93939D;}
	.join_body .join_form .join_warn_txt {display:none;font-size:22px;color:#E10000;margin-top:5px;}
	.join_body .join_form .join_submit {width:292px;height:70px;border:none;margin:40px 0 0 149px;padding:0;font:bold 34px 'Nanum Gothic', sans-serif;color:#FFF;background-color:#F66B68;box-shadow:1px 1px 1px #777;}
	.join_body .join_footer {margin:244px auto 32px;width:277px;}

	/*createroom*/
	.create_top {width:100%;height:128px;background:url("/images/2_top_bg.png");}
	.create_top .create_header {float:left;margin:20px 0 0 15px;}
	.create_top .create_header .create_logo {float:left;}
	.create_top .create_header .create_title {float:left;margin:3px 0 0 7px;font-size:22px;color:#FFF;}
	.create_body {overflow:hidden;
	background-image: linear-gradient(bottom, #F9F9F9 23%, #FFF 66%);
	background-image: -webkit-gradient(
	     linear,
	     left bottom,
	     left top,
	     color-stop(0.33, #F9F9F9),
	     color-stop(0.86, #FFF )
	);}
	.create_body .create_form {width:590px;margin:40px auto 0;}
	.create_body .create_form .create_lb {display:block;margin-bottom:15px;font-size:32px;font-weight:bold;}
	.create_body .create_form .create_lb.lst {margin-top:30px;}
	.create_body .create_form .create_text_input {padding: 15px 15px;width:558px;height:70px;font:bold 28px 'Nanum Gothic', sans-serif;color:#93939D;}
	.create_body .create_form .create_select_votetype {border:1px solid #E4E4E4;}
	.create_body .create_form .create_select_votetype .create_select_votetype_title {margin:28px 0 0 34px;color:#90909A;font-size:22px;}
	.create_body .create_form .create_select_votetype .votetype_wrap {overflow:hidden;margin:37px auto 22px;width:522px;}
	.create_body .create_form .create_select_votetype .btn_move {float:left;width:35px;height:54px;text-indent:-9999em;margin-top:50px;}
	.create_body .create_form .create_select_votetype .btn_move_left {background:url("/images/vote_arrow_left.png") no-repeat;margin-right:52px;}
	.create_body .create_form .create_select_votetype .btn_move_right {background:url("/images/vote_arrow_right.png") no-repeat;margin-left:52px;}
	.create_body .create_form .create_select_votetype .vote_content_wrap {float:left;}
	.create_body .create_form .create_select_votetype .vote_content_wrap .voteword {float:left;width:160px;height:160px;background-color:#CFCFD5;font:bold 38px 'Nanum Gothic',
	sans-serif;color:#FFF;text-align:center;line-height:164px;}
	.create_body .create_form .create_select_votetype .vote_content_wrap .voteword.lst {margin-left:28px;}
	.create_body .create_form .create_select_votetype .votepage_navi_wrap {text-align:center;margin-bottom:20px;}
	.create_body .create_form .create_select_votetype .votepage_navi_wrap .votepage_navi {display:inline-block;width:16px;height:16px;background-color:#E0E0E4;}
	.create_body .create_form .create_select_votetype .votepage_navi_wrap .votepage_navi.on {background-color:#15AEFF;}
	.create_body .create_form .create_btn_next {width:292px;height:70px;border:none;margin:40px 0 0 149px;padding:0;background:url("/images/next_bt.png") no-repeat;text-indent:-9999em;box-shadow:1px 1px 1px #777;}
	.create_body .create_form .room_info_wrap {border:6px solid #73737C;border-radius:10px;text-align:center;}
	.create_body .create_form .room_info_wrap .room_info {font-size:22px;color:#90909A;margin:20px 0;}
	.create_body .create_form .room_info_wrap .room_theme {margin-top:25px;font-size:26px;line-height:30px;}
	.create_body .create_form .sns_info {height:100px;border-radius:10px;}
	.create_body .create_form .facebook_info {background-color:#3B5998;margin-top:30px;}
	.create_body .create_form .twitter_info {background-color:#00ACED;margin-top:16px;}
	.create_body .create_form .sns_info.off {background-color:#B1B1B1;}
	.create_body .create_form .sns_info .checkbox {float:left;margin:18px 0 0 5px;}
	.create_body .create_form .sns_info .sns_name {float:left;margin:15px 0 0 15px;font:bold 38px 'Nanum Gothic', sans-serif;color:#FFF;}
	.create_body .create_form .sns_info .sns_name .sns_personal_info {float:left;font-size:18px;}
	.create_body .create_form .sns_info .btn_on .check_on {display:block;}
	.create_body .create_form .sns_info .btn_on .check_off {display:none;}
	.create_body .create_form .sns_info .btn_off .check_on {display:none;}
	.create_body .create_form .sns_info .btn_off .check_off {display:block;}
	.create_body .create_form .create_submit {width:292px;height:70px;border:none;margin:40px 0 0 149px;padding:0;font:bold 34px 'Nanum Gothic', sans-serif;color:#FFF;background-color:#F66B68;box-shadow:1px 1px 1px #777;}
	.create_body .create_footer {margin:244px auto 32px;width:277px;}
	</style>
	<% end %>

</head>
<body>

